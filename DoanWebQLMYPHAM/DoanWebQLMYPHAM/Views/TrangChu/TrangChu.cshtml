@using DoanWebQLMYPHAM.Models;

@{
    ViewBag.Title = "TrangChu";
    Layout = "~/Views/_LayoutQLMyPham.cshtml";
    var kh =(KhachHang)ViewBag.kh;
}

@helper Truncate (string input, int length)
{
    if(input.Length< length)
    {
        @input
    }
    else
    {
        @input.Substring(0,length) <text>...</text>
    }
}

    <div class="container-fluid">
        <form action="/MyPham/Themsp" method="post" enctype="multipart/form-data">
            <div class="modal" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLable" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header"><h4 class="modal-title">Model Sản Phẩm </h4></div>
                        <div class="modal-body">

                            <div class="form-group">
                                <label for="Masp">Mã Sản Phẩm</label>
                                <input type="text" class="form-control" id="Masp" placeholder="ID" disabled="disabled" />
                            </div>
                            <div class="form-group">
                                <label for="Tensp">Tên sản phẩm</label>
                                <input type="text" class="form-control" name="txtTen" placeholder="Enter Name" />
                            </div>
                            <div class="form-group">
                                <label for="Anhbiasp">Ảnh bìa </label>
                                <input type="file" name="fupload1" />
                            </div>
                            <div class="form-group">
                                <label for="Giasp">Giá Bán </label>
                                <input type="text" class="form-control" name="txtGiaban" placeholder="Enter Price" />
                            </div>
                            <div class="form-group">
                                <label for="Motasp">Mô tả</label>
                                <textarea name="MoTa" placeholder="Enter Mô tả " > </textarea>
                            </div>
                            <div class="form-group">
                                <label for="Ngaycapnhapsp">Ngày cập nhập </label>
                                <input type="date" class="form-control" name="txtNgaycapnhap" />
                            </div>
                            <div class="form-group">
                                <label for="Solgton">Số Lượng Tồn</label>
                                <input type="number" class="form-control" name="txtSoluongton" />
                            </div>
                            <div class="form-group">
                                <label for="Mathuonghieu">Mã Thương Hiệu</label>
                                @*nên để combox*@
                                @Html.DropDownList("th");
                            </div>
                            <div class="form-group">
                                <label for="Masuatxu">Mã xuất xứ </label>
                                @*nên để combox*@
                                @Html.DropDownList("xx");
                            </div>

                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Thêm mỹ phẩm</button>

                            <button type="button" class="btn btn-danger" id="iclose" data-dismiss="modal">X</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>


        <div class="row">
            <div id="carouselExampleIndicators" class="carousel slide mt-1" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Content/HinhAnh/00001.jpg" class="d-block w-100" alt="First-slide" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/HinhAnh/000018.jpg" class="d-block w-100" alt="Second-slide" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/HinhAnh/000019.jpg" class="d-block w-100" alt="Third-slide" />
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <h1 class="bg-danger">THƯƠNG HIỆU</h1>
                @Html.Action("DSThuongHieu", "TrangChu")
            </div>
            <div class="col-md-9">
                <div class="product-group">
                    <div class="row">

                        @foreach (Sanpham sp in Model)
                        {
                        <div class="col-lg-3 card mr-2 mt-2 text-center">

                            <img src="~/Content/HinhAnh/@sp.AnhBia" style="width:200px; height:200px" class="card-img-top mt-2" />
                            <div class="card-body">
                                <h5 style="font-size:20px" class="card-title">@Truncate(sp.Tensp, 30)</h5>
                            </div>
                            <label style="color:red">@sp.GiaBan đ</label>
                            @Html.ActionLink("Chi tiết", "HienThiChiTiet", "Chitiet", new { id = @sp.Masp }, new { @class = "btn btn-warning" })
                            @if (kh != null)
                            {
                                if (kh.TaiKhoan == "admin")
                                {
                                    @Html.ActionLink("Sửa", "getbyId", "MyPham", new { id = sp.Masp }, new { @class = "btn btn-primary" })
                                    @Html.ActionLink("Xóa", "Delete", "MyPham", new { id = sp.Masp }, new { @class = "btn btn-danger" })
                                }
                            }

                            @*<a href="#" onclick=" return getbyID();">Sửa</a>
        <a href="#" onclick="Delete(@sp.Masp)">Xóa</a>*@

                        </div>
                        }
                      
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            @if (kh != null)
            {
                if (kh.TaiKhoan == "admin")
                {
                    <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#myModal1" id="btnOpen">Thêm mới</button>
                }
            }


            </div>
        <div class="row">
            <div style="background-image:url(../../Content/HinhAnh/00002.jpg);height:800px;width:100%" class="text-md-left">
                <h1>Kem khoáng Deadsea</h1>
                <h3>
                    Kem khoáng Deadsea Multi-Vitamin kem SPF-20 khoáng chất (Sức khỏe & Làm đẹp) <br />
                    bao gồm một phức hợp các vitamin C và kết hợp với dầu hoa anh thảo, cây hắc mai biển, trà xanh, lô hội <br />
                    cũng như các bộ lọc tia UVA và UVB.
                </h3>
                @Html.ActionLink("Xem ngay", "TrangChu", "TrangChu", new { @class = "btn btn-warning" })
            </div>
        </div>
        <div>
            <h1 class="text-center" style="border-bottom:solid;color:indianred">TIN TỨC</h1><br />
            <h3 class="text-center">Cập nhập những tin tức mới nhất</h3>
        </div>
        <div class="row">
            <div class="col-md-4">
                <img src="~/Content/HinhAnh/00006.jpg" />
                <p class="text-center" style="color:#F9E79F">NGÀY 03 THÁNG 08 NĂM 2020</p>
                <p class="text-center">Mặt nạ dưỡng ẩm và làm sạch da mặt tốt nhất</p>
            </div>
            <div class="col-md-4">
                <img src="~/Content/HinhAnh/00005.jpg" />
                <p class="text-center" style="color:#F9E79F">NGÀY 03 THÁNG 08 NĂM 2020</p>
                <p class="text-center">Áp dụng trang điểm cho một cái nhìn tươi mát và đơn giản</p>
            </div>
            <div class="col-md-4">
                <img src="~/Content/HinhAnh/00004.jpg" />
                <p class="text-center" style="color:#F9E79F">NGÀY 03 THÁNG 08 NĂM 2020</p>
                <p class="text-center">Sản phẩm tuyệt vời mà bạn cần hôm nay</p>
            </div>
        </div>
    </div>

