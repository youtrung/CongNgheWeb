@using DoanWebQLMYPHAM.Models;

@{
    ViewBag.Title = "TrangChu";
}

@helper Truncate (string input, int length)
{
    if(input.Length< length)
    {
        @input
    }
    else
    {
        @input.Substring(0,length) <text>...</text>
    }
}

<div class="container-fluid">
    <div class="row">
        <div id="carouselExampleIndicators" class="carousel slide mt-1" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Content/HinhAnh/1.jpg" class="d-block w-100" alt="First-slide"/>
                </div> 
                <div class="carousel-item">
                    <img src="~/Content/HinhAnh/18.jpg" class="d-block w-100" alt="Second-slide" />
                </div> 
                <div class="carousel-item">
                    <img src="~/Content/HinhAnh/19.jpg" class="d-block w-100" alt="Third-slide" />
                </div> 
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <h1 class="bg-danger">THƯƠNG HIỆU</h1>
            @Html.Action("DSThuongHieu","TrangChu")
        </div>
        <div class="col-md-9">
            <div class="product-group">
                <div class="row">
                    @foreach (Sanpham sp in Model)
                    {
                        <div class="col-lg-3 card mr-2 mt-2 text-center">
                            <img src="~/Content/HinhAnh/@sp.AnhBia" style="width:200px; height:200px" class="card-img-top mt-2"/>
                            <div class="card-body">
                                <h5 style="font-size:20px" class="card-title">@Truncate(sp.Tensp,30)</h5>
                            </div>
                            <label style="color:red">@sp.GiaBan đ</label>
                            @Html.ActionLink("Chi tiết", "HienThiChiTiet", "Chitiet", new { id = @sp.Masp }, new { @class = "btn btn-warning"})
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
