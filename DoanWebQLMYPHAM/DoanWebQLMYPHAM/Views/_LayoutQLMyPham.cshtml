@using DoanWebQLMYPHAM.Models; 
@{ 
    var bg = (GioHang)ViewBag.Message;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css" integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap/css/slick-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap/css/slick.css" rel="stylesheet" />
    <link href="~/Content/bootstrap/css/slidesytle.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="modal" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLable" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header"><h4 class="modal-title">Login</h4></div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <label for="Name">UserName</label>
                                <input type="text" class="form-control" id="name" placeholder="Enter user" />
                            </div>
                            <div class="form-group">
                                <label for="Pass">PassWord</label>
                                <input type="text" class="form-control" id="pass" placeholder="Enter Password" />
                            </div>

                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" id="btnLogin" onclick="Login();">Login</button>
                        <button type="button" class="btn btn-primary" id="btnSign" onclick="Signin();">Don't have an account ?</button>
                        <button type="button" class="btn btn-danger" id="iclose" data-dismiss="modal">X</button>
                    </div>
                </div>
            </div>

        </div>






        <div class="row" style="background-color:goldenrod; height:30px">
            <div class="col-md-5"></div>
            <p class="mt-1" style="font-size:13px;color:white">Miễn phí free ship với đơn hàng trên 1.000.000 đ</p>
        </div>
        <div class="row mt-2">
            <div class="col-md-1"></div>
            <div class="col-md-2">
                <img class="w-50" src="~/Content/HinhAnh/Logo_selenia.jpg" />
            </div>
            <div class="col-md-5 mt-1">
                <form class="form-check-inline" action="~/TrangChu/TimKiemSP" method="post">
                    <input name="txtTimKiem" style="height:40px" class="container" type="text" placeholder="Tìm kiếm sản phẩm..." />
                    <button type="submit" class="btn" style="background-color:goldenrod"><img style="height:25px" src="~/Content/HinhAnh/Search-512.png" /> </button>
                </form>
            </div>
            <div class="col-md-3 mt-1 form-check-inline">

                @if (@Html.Action("KhoitaolayoutTenUser", "TrangChu").ToHtmlString().Trim().Length == "<label>0</label>".Length)
                {
                    <button type="button" data-toggle="modal" data-target="#myModal"> <img src="~/Content/HinhAnh/Dangnhap.png" /> </button>
                }
                else
                {
                    @Html.Action("KhoitaolayoutTenUser", "TrangChu")
                }
                <img class="mt-2 ml-3" src="~/Content/HinhAnh/gach.png" />
                <a href="@Url.Action("XemGioHang", "Chitiet")"><img class="mt-2 ml-3" src="~/Content/HinhAnh/giohang.png" /></a>
                <span>
                    @Html.Action("HienThiSoLuongMathang", "Chitiet")
                </span>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-1"></div>
            <div class="form-check-inline">
                <a class="btn" id="ireload" href="@Url.Action("TrangChu", "TrangChu")" style="background-color:white; color:black; height:50px; font-size:15px"><b>TRANG CHỦ</b></a>
                <div class="nav navbar">
                    <div class="dropdown">
                        <a class="btn dropdown-toggle ml-5" id="dropdownMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color:white; color:black; height:50px; font-size:15px"><b>THƯƠNG HIỆU</b></a>
                        <div class="dropdown-menu ml-5" aria-labelledby="dropdownMenu">
                            @Html.Action("MenuThuongHieu", "TrangChu", new { @class = "dropdown-item" })
                        </div>
                    </div>
                </div>
                <a class="btn ml-5" href="@Url.Action("TrangChu", "TrangChu")" style="background-color:white; color:black; height:50px; font-size:15px"><b>GIỚI THIỆU</b></a>
                <a class="btn ml-5" href="@Url.Action("Tintuc", "LienHe")" style="background-color:white; color:black; height:50px; font-size:15px"><b>TIN TỨC</b></a>
                <a class="btn ml-5" href="@Url.Action("Lienhe", "LienHe")" style="background-color:white; color:black; height:50px; font-size:15px"><b>LIÊN HỆ</b></a>
                <a class="btn ml-5" href="@Url.Action("QuanLiDonHang", "Chitiet")" style="background-color:white; color:black; height:50px; font-size:15px"><b>QUẢN LÝ ĐƠN</b></a>
            </div>
        </div>
    </div>
    <div class="row ">
        @RenderBody()
    </div>
