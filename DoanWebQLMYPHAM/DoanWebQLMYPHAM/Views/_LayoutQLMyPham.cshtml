                <a href="@Url.Action("TrangChu", "TrangChu")"><img class="ml-2" style="width:40px" src="~/Content/HinhAnh/pinterest.png" /></a>
                <a href="@Url.Action("TrangChu", "TrangChu")"><img class="ml-2" style="width:40px" src="~/Content/HinhAnh/twitter.png" /></a>
